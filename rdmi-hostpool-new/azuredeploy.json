{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "imageId": {
            "type": "string"
        },
        "rdshNamePrefix": {
            "type": "string",
            "metadata": {
                "description": "This prefix will be used in combination with the VM number to create the VM name. If using “rdsh” as the prefix, VMs would be named “rdsh-0”, “rdsh-1”, etc. You should use a unique prefix to reduce name collisions in Active Directory."
            },
            "defaultValue": "[take(toLower(resourceGroup().name),10)]"
        },
        "vaultName": {
            "type": "string",
            "metadata": {
                "description": "Name of the Key Vault which has the adminUsername secret/password"
            }
        },
        "vaultResourceGroup": {
            "type": "string"
        },
        "secretName": {
            "type": "string"
        },
        "rdshNumberOfInstances": {
            "type": "int",
            "metadata": {
                "description": "Number of session hosts that will be created and added to the hostpool."
            }
        },
        "rdshVmSize": {
            "type": "string",
            "metadata": {
                "description": "The size of the session host VMs."
            },
            "defaultValue": "Standard_A2"
        },
        "existingDomainUPN": {
            "type": "string",
            "metadata": {
                "description": "A username in the domain that has privileges to join the session hosts to the domain. For example, “user1@contoso.com”."
            }
        },
        "localAdminPassword": {
            "type": "string"
        },
        "existingDomainFqdn": {
            "type": "string",
            "metadata": {
                "description": "."
            }
        },
        "virtualNetworkResourceGroupName": {
            "type": "string",
            "metadata": {
                "description": "The resource group containing the existing virtual network."
            }
        },
        "existingVnetName": {
            "type": "string",
            "metadata": {
                "description": "The name of the virtual network the VMs will be connected to."
            }
        },
        "existingSubnetName": {
            "type": "string",
            "metadata": {
                "description": "The subnet the VMs will be placed in."
            }
        },
        "RDBrokerURL": {
            "type": "string",
            "metadata": {
                "description": "The RD Broker URL of the RDmi deployment the session hosts will be connected to."
            },
            "defaultValue": ""
        },
        "ExistingTenantName": {
            "type": "string",
            "metadata": {
                "description": "The name of the RDS Tenant in the RDmi deployment."
            }
        },
        "HostPoolName": {
            "type": "string",
            "metadata": {
                "description": "The name of the hostpool to be created in the RDS Tenant."
            }
        },
        "ouPath": {
            "type": "string",
            "metadata": {
                "description": "Specifies an organizational unit (OU) for the domain account. Enter the full distinguished name of the OU in quotation marks. Example: \"OU=testOU; DC=domain; DC=Domain; DC=com"
            }
        },
        "TenantAdminUPN": {
            "type": "string",
            "defaultvalue": "",
            "metadata": {
                "description": "The UPN that has rights in the RDS Tenant to create the hostpool. For example, “admin1@contoso.com”"
            }
        },
        "_artifactsLocation": {
            "type": "string",
            "metadata": {
                "description": "Location of resources that the script is dependent on such as linked templates and DSC modules"
            },
            "defaultValue": "https://raw.githubusercontent.com/wahidsaleemi/avd/master/rdmi-hostpool-new/"
        },
        "_artifactsLocationSasToken": {
            "type": "securestring",
            "metadata": {
                "description": "The sasToken required to access _artifactsLocation.  When the template is deployed using the accompanying scripts, a sasToken will be automatically generated."
            },
            "defaultValue": ""
        }
    },
    "variables": {
        "deployRDSHUri": "[concat(parameters('_artifactsLocation'),'/nested/new-rdsh.json')]"
    },
    "resources": [
    {
        "name": "deploy-rdsh-new",
        "type": "Microsoft.Resources/deployments",
        "apiVersion": "2017-05-10",
        "dependsOn": [],
        "properties": {
            "mode": "Incremental",
            "templateLink": {
                "uri": "[variables('deployRDSHUri')]",
                "contentVersion": "1.0.0.0"
            },
            "parameters": {
                "imageId": {
                    "value": "[parameters('imageId')]"
                },
                "rdshNamePrefix": {
                    "value": "[parameters('rdshNamePrefix')]"
                },
                "rdshNumberOfInstances": {
                    "value": "[parameters('rdshNumberOfInstances')]"
                },
                "rdshVmSize": {
                    "value": "[parameters('rdshVmSize')]"
                },
                "existingDomainUPN": {
                    "value": "[parameters('existingDomainUPN')]"
                },
                "existingDomainPassword": {
                    "reference": {
                        "keyVault": {
                            "id": "[resourceId(subscription().subscriptionId,  parameters('vaultResourceGroup'), 'Microsoft.KeyVault/vaults', parameters('vaultName'))]"
                        },
                        "secretName": "[parameters('secretName')]"
                    }
                },
                "TenantAdminUPN": {
                    "value": "[parameters('TenantAdminUPN')]"
                },
                "TenantAdminPassword": {
                    "reference": {
                        "keyVault": {
                            "id": "[resourceId(subscription().subscriptionId,  parameters('vaultResourceGroup'), 'Microsoft.KeyVault/vaults', parameters('vaultName'))]"
                        },
                        "secretName": "[parameters('secretName')]"
                    }
                },
                "localAdminPassword": {
                    "value": "[parameters('localAdminPassword')]"
                },
                "existingDomainFqdn": {
                    "value": "[parameters('existingDomainFqdn')]"
                },
                "virtualNetworkResourceGroupName": {
                    "value": "[parameters('virtualNetworkResourceGroupName')]"
                },
                "existingVnetName": {
                    "value": "[parameters('existingVnetName')]"
                },
                "existingSubnetName": {
                    "value": "[parameters('existingSubnetName')]"
                },
                "RDBrokerURL": {
                    "value": "[parameters('RDBrokerURL')]"
                },
                "ExistingTenantName": {
                    "value": "[parameters('ExistingTenantName')]"
                },
                "HostPoolName": {
                    "value": "[parameters('HostPoolName')]"
                },
                "ouPath": {
                    "value": "[parameters('ouPath')]"
                },
                "_artifactsLocation": {
                    "value": "[parameters('_artifactsLocation')]"
                },
                "_artifactsLocationSasToken": {
                    "value": "[parameters('_artifactsLocationSasToken')]"
                }
            }
        }
    }
    ]
}